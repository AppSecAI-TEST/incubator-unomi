<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.oasis-open.wemi</groupId>
        <artifactId>wemi-context-server</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

  <artifactId>wemi-context-server-plugins</artifactId>
  <packaging>pom</packaging>

  <modules>
    <module>login</module>
    <module>request</module>
  </modules>

    <dependencies>
        <dependency>
            <groupId>org.oasis-open.wemi</groupId>
            <artifactId>wemi-context-server-api</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <!-- PAX CDI Dependencies -->

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jcdi_1.0_spec</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-atinject_1.0_spec</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-annotation_1.1_spec</artifactId>
            <version>1.0.1</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.ops4j.pax.cdi</groupId>
            <artifactId>pax-cdi-api</artifactId>
            <version>0.7.0</version>
            <scope>provided</scope>
        </dependency>

        <!-- End of PAX CDI Dependencies -->

    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <version>2.3.7</version>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>*;scope=compile|runtime</Embed-Dependency>
                        <Import-Package>
                            sun.misc;resolution:=optional,
                            *
                        </Import-Package>
                        <Require-Capability>
                            org.ops4j.pax.cdi.extension; filter:="(extension=pax-cdi-extension)",
                            osgi.extender; filter:="(osgi.extender=pax.cdi)"
                        </Require-Capability>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
