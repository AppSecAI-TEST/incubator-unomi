{
    "id": "sendMailAction",
    "serviceFilter": "(actionExecutorId=sendMail)",
    "tags": [ "event" ],
    "template": "/plugins/org.oasis-open.wemi.context-server-plugins-mail/actions/sendMailAction.html",
    "resourceBundle": "/plugins/org.oasis-open.wemi.context-server-plugins-mail/messages",
    "parameters": [
        {
            "id": "from",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": ""
        },
        {
            "id": "to",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": "(initializerId=userProperty)"
        },
        {
            "id": "cc",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": ""
        },
        {
            "id": "bcc",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": ""
        },
        {
            "id": "subject",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": ""
        },
        {
            "id": "template",
            "type": "string",
            "multivalued": false,
            "choicelistInitializerFilter": "",
            "defaultValue": "\nHello $user.properties.(\"j:firstName\")$ $user.properties.(\"j:lastName\")$,\nHow are you doing today ?"
        }

    ]
}